{% extends 'base.njk' %}

{% block page_title %}Queen Billboard{% endblock %}

{% block page_description %}A look at Queen's chart-topping hits{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1>Queen's Billboard Hits</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Performer</th>
                <th>Song</th>
                <th>Weeks on Chart</th>
                <th>Top Position</th>
            </tr>
        </thead>
        <tbody>
            {% for hit in billboard_hits %}
            <tr>
                <td>Queen</td>
                <td>{{ hit.song }}</td>
                <td>{{ hit.weeks_on_chart }}</td>
                <td>{{ hit.top_position }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
