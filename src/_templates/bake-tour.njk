{% extends '_templates/base.njk' %}

{% block page_title %}Queen Tour Dates{% endblock %}

{% block page_description %}Check out the upcoming tour dates and catch Queen live in concert!{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1>Upcoming Tour Dates</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>City</th>
                <th>Country</th>
                <th>Venue</th>
            </tr>
        </thead>
        <tbody>
            {% for date in tour_dates %}
            <tr>
                <td>{{ date.date }}</td>
                <td>{{ date.city }}</td>
                <td>{{ date.country }}</td>
                <td>{{ date.venue }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
