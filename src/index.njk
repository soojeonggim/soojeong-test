{% extends '_templates/base.njk' %}

{% block page_title %}Welcome to Queen{% endblock %}

{% block page_description %}Explore the history and discography of the legendary band Queen!{% endblock %}

{% block content %}
<div class="container">
  <!-- hero header -->
    <div class="hero-header" style="background-image: url('img/hero-queen.jpg');">
    <h1 class="display-1 text-white">Welcome to the World of Queen</h1>
    <p class="lead text-white">Discover the legacy of Queen, their music, band members, and albums.</p>
  </div>
  
  <!-- Band Members Loop -->
  <h2>Meet the Band</h2>
  <div class="row">
    {% for member in members %}
      <div class="col-md-4">
        <img src="img/band/{{ member.slug }}.jpg" alt="Photo of {{ member.name }}" class="img-fluid">
        <h3><a href="members/{{ member.slug }}.html">{{ member.name }}</a></h3>
        <p>{{ member.instrument }}</p>
      </div>
    {% endfor %}
  </div>

  <!-- discography section -->
  <h2>Discography</h2>
  <div class="row">
    {% for album in discography %}
      <div class="col-md-4">
        <img src="img/albums/{{ album.slug }}.jpg" alt="{{ album.title }}" class="img-fluid">
        <h3><a href="albums/{{ album.slug }}.html">{{ album.title }}</a></h3>
        <p>Released: {{ album.release_date }}</p>
      </div>
    {% endfor %}
  </div>
</div>
{% endblock %}